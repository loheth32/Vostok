{
  "manifest_version": 3,
  "name": "GestureControls",
  "version": "1.0.0",
  "permissions": ["tabs", "activeTab", "scripting", "storage","camera"],
  "description": "A extension to control the browser using simple hand gestures",
  "icons":{
    "48":"reach.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup":"popup.html"
    }
}